@model kp.Models.RegisterViewModel


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">




<style>


    .ui-widget-header {
        background: no-repeat;
        background-color: #337ab7;
        text-align: center;
        font-family: Tahoma;
        font-size: 16px;
        padding: 5px;
        color: white;
        margin-bottom: 15px;
    }

    .mymodal-content {
        margin: 0px;
        padding: 0px;
        text-align:right;
    }

    .mymodal {
        width:100%;
        margin-bottom: 10px;
        margin-left: 25px;
        box-shadow: 0px 0px 3px #848484;
        text-align: right;
        padding-right: 30px;
    }

    .mymodal-btn {
        float: right;
        width: 80px;
        margin-bottom: 10px;
        margin-top: 15px;
        box-shadow: 0px 0px 3px #848484;
        text-align: center;
        position: relative;
        margin-left:8px;
        /*bottom:0px;
        right:0px;*/
    }

    .usr::before {
        font-family: "Font Awesome 5 Free";
        content: "\f007";
        position: absolute;
        font-size: 19px;
        color: #555e60;
        right: 170px;
        padding-top: 3px;
        padding-right: 8px;
        font-weight: 900;
    }

    .email::before {
        font-family: "Font Awesome 5 Free";
        content: "\f0e0";
        position: absolute;
        font-size: 19px;
        color: #555e60;
        right: 170px;
        padding-top: 3px;
        padding-right: 8px;
        font-weight: 900;
    }

    .pass::before {
        font-family: "Font Awesome 5 Free";
        content: "\f023";
        position: absolute;
        font-size: 19px;
        color: #555e60;
        right: 170px;
        padding-top: 3px;
        padding-right: 8px;
        font-weight: 900;
    }

    .lab {
        float: right;
        width: 150px;
        text-align: right;
    }
</style>

@using (Html.BeginForm("PopUp", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<div class="mymodal-content">
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group email" dir="rtl">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label lab" })

        @Html.TextBoxFor(m => m.Email, new { @class = "form-control mymodal ", placeholder = "ایمیل را وارد کنید" })
    </div>

    <div class="form-group usr" dir="rtl">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label lab" })

        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control mymodal", placeholder = "نام کاربری را وارد کنید" })

    </div>

    <div class="form-group pass" dir="rtl">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label lab" })

        @Html.PasswordFor(m => m.Password, new { @class = "form-control mymodal", placeholder = "گذر واژه را وارد کنید " })

    </div>

    <div class="form-group pass" dir="rtl">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label lab" })

        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control mymodal", placeholder = "تایید گذر واژه " })
    </div>

    <input class="mymodal-btn form-control btn btn-success" dir="rtl" type="button" value="ثبت نام" onclick="savedetails()" />
    <input class="mymodal-btn form-control btn btn-info" dir="rtl" style="float:left" type="button" value="ورود" onclick="" />


</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script type="text/javascript">
    function savedetails() {
        var Email = $("#Email").val();
        var UserName = $("#UserName").val();
        var Password = $("#Password").val();
        var ConfirmPassword = $("#ConfirmPassword").val();

        var insertemp = { "Email": Email, "UserName": UserName, "Password": Password, "ConfirmPassword": ConfirmPassword };

        $.post('/Account/PopUp', insertemp,
            function (data) { if (data == 0) { Location = location.href; } }, 'json');
        alert("ثبت نام موفق!", "asd");
        

    }

</script>

